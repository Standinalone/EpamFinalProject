<!--============================================================
	Security filter.
	1) admin: admin commands
	2) client: client commands
	3) commons: commands for all roles
	4) out-of-control: commands without access control
	Delimiter - space/tab
=============================================================-->

	<filter>
		<filter-name>CommandAccessFilter</filter-name>
		<filter-class>com.epam.project.filter.CommandAccessFilter</filter-class>
		<init-param>
			<param-name>admin</param-name>
			<param-value>
			ADD_LECTURER_PAGE 
			MANAGE_STUDENTS_PAGE 
			MANAGE_COURSES_PAGE 
			ADD_EDIT_COURSE_PAGE 
			EDIT_LECTURER_PAGE
			EDIT_LECTURER
			CHANGE_USERS_STATUS
			ADD_EDIT_COURSE
			DELETE_COURSE
			</param-value>
		</init-param>
		<init-param>
			<param-name>user</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>lecturer</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>common</param-name>
			<param-value>
			PROFILE_PAGE 
			MY_COURSES_PAGE
			SIGNOUT
			JOIN_COURSES
			</param-value>
		</init-param>
		<init-param>
			<param-name>out-of-control</param-name>
			<param-value>
			HOME_PAGE 
			LOGIN_PAGE 
			REGISTER_PAGE 
			LOGIN 
			REGISTER 
			SUCCESS_PAGE 
			ERROR_PAGE
			CHANGE_LANGUAGE
			REGISTRATION_CONFIRM
			</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>CommandAccessFilter</filter-name>
		<servlet-name>FrontController</servlet-name>
	</filter-mapping>


</web-app>
