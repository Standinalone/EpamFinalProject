<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         version="2.5" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<display-name>Epam</display-name>

<!--============================================================
	Controller
=============================================================-->

	<servlet>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>com.epam.project.controller.FrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>

<!--============================================================
	i18n filter
=============================================================-->
	<filter>
		<filter-name>LocaleFilter</filter-name>
		<filter-class>com.epam.project.filter.LocaleFilter</filter-class>
		<init-param>
			<param-name>defaultLocale</param-name>
		    <param-value>ru</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>LocaleFilter</filter-name>
		<servlet-name>FrontController</servlet-name>
	</filter-mapping>
	<!-- supported locales -->
	<context-param>
		<param-name>locales</param-name>
		<param-value>ru en</param-value>
	</context-param>
	
<!--============================================================
	CORS support
=============================================================-->
	<filter>
		<filter-name>CorsFilter</filter-name>
		<filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CorsFilter</filter-name>
		<servlet-name>FrontController</servlet-name>
	</filter-mapping>
	
<!--============================================================
	Encoding support filter
=============================================================-->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.epam.project.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/WEB-INF/views/*</url-pattern>
	</filter-mapping>

	
<!--============================================================
	Error page
=============================================================-->
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/vies/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/vies/error.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/vies/error.jsp</location>
	</error-page>
	
<!--============================================================
	Context listener
=============================================================-->
	<listener>
		<listener-class>com.epam.project.listener.ContextListener</listener-class>
	</listener>

<!--============================================================
	DB resource reference
=============================================================-->

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/epam</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

